@model Devoiture.ViewModel.ChangeNameRole_VM

@{
    ViewData["Title"] = "Đổi tên quyền";
}

<div class="container mt-5">
    <h2 class="mb-4">Đổi tên quyền</h2>

    <form asp-action="ChangeNameRole" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên quyền hiện tại</th>
                    <th>Tên quyền mới</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DanhSachQuyen.Count; i++)
                {
                    <tr>
                        <td>@Model.DanhSachQuyen[i].TenQuyen</td>
                        <td>
                            <input type="hidden" asp-for="DanhSachQuyen[i].MaQuyen" />
                            <input class="form-control" asp-for="DanhSachQuyen[i].TenQuyen" />
                            <span asp-validation-for="DanhSachQuyen[i].TenQuyen" class="text-danger"></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Đổi tên</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}