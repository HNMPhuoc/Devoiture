@model Devoiture.ViewModel.ChitietKH_VM

@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Chi Tiết Khách Hàng</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    <img class="rounded-circle mb-3" src="~/images/AnhDaiDien/@(string.IsNullOrEmpty(Model.HinhDaiDien) ? "userdefault.png" : Model.HinhDaiDien)" alt="Avatar" style="width: 150px; height: 150px; object-fit: cover;">
                    @if (Model.Online.HasValue)
                    {
                        <div class="mt-2">
                            <span class="badge @(Model.Online.Value ? "bg-success" : "bg-secondary")">
                                @(Model.Online.Value ? "Online" : "Offline")
                            </span>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.HoTen</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Sdt</dd>

                        <dt class="col-sm-4">Birthday</dt>
                        <dd class="col-sm-8">@Model.Ngsinh.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">
                            @(Model.Gioitinh.HasValue ? (Model.Gioitinh.Value ? "Nam" : "Nữ") : "Không xác định")
                        </dd>

                        <dt class="col-sm-4">Number of Vehicles</dt>
                        <dd class="col-sm-8">@Model.Soxe</dd>

                        <dt class="col-sm-4">Driver's License Number</dt>
                        <dd class="col-sm-8">@Model.SoGplxb2</dd>

                        <dt class="col-sm-4">Driver's License Image</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.HinhGplx))
                            {
                                <img src="~/images/AnhGPLX/@Model.HinhGplx" alt="Driver's License Image" style="width: 100%; max-width: 200px;">
                            }
                            else
                            {
                                <img src="~/images/AnhGPLX/gplxDefault.png" alt="Driver's License Image" style="width: 100%; max-width: 200px;">
                            }
                        </dd>

                        <dt class="col-sm-4">Citizen ID Number</dt>
                        <dd class="col-sm-8">@Model.SoCccd</dd>

                        <dt class="col-sm-4">Citizen ID Image</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.HinhCccd))
                            {
                                <img src="~/images/AnhCCCD/@Model.HinhCccd" alt="Citizen ID Image" style="width: 100%; max-width: 200px;">
                            }
                            else
                            {
                                <img src="~/images/AnhCCCD/cccdDefault.png" alt="Citizen ID Image" style="width: 100%; max-width: 200px;">
                            }
                        </dd>

                        <dt class="col-sm-4">Account Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Lock.HasValue && Model.Lock.Value ? "bg-danger" : "bg-success")">
                                @(Model.Lock.HasValue && Model.Lock.Value ? "Locked" : "Active")
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col text-end">
                    <a asp-action="DanhsachKH" class="btn btn-secondary">Trở lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>
