<!-- Sidebar Start -->
<div class="sidebar pe-4 pb-3">
    <nav class="navbar bg-light navbar-light">
        <a href="index.html" class="navbar-brand mx-4 mb-3">
            <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>@ViewBag.Title</h3>
        </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                @if (string.IsNullOrEmpty(Context.Session.GetString("AccountAvatar")))
                {
                    <img class="rounded-circle" src="~/images/AnhDaiDien/userdefault.png" alt="" style="width: 40px; height: 40px;">
                    <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                }
                else
                {
                    <img class="rounded-circle" src="~/images/AnhDaiDien/@Context.Session.GetString("AccountAvatar")" alt="" style="width: 40px; height: 40px;">
                    <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                }
            </div>
            <div class="ms-3">
                <h6 class="mb-0">@Context.Session.GetString("AccountName")</h6>
                <span>@Context.Session.GetString("AccountRoleName")</span>
            </div>
        </div>
        <div class="navbar-nav w-100">
            <a asp-action="Index" asp-controller="TrangchuAdmin" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Trang chủ</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Quyền tài khoản</a>
                <div class="dropdown-menu bg-transparent border-0">
                    <a asp-action="PhanQuyenRole" asp-controller="PhanQuyen" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Phân quyền tài khoản</a>
                    <a asp-action="ChangeRole" asp-controller="PhanQuyen" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Chuyển quyền tài khoản</a>
                    <a asp-action="ChangeNameRole" asp-controller="PhanQuyen" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Đổi tên quyền</a>
                </div>
            </div>            
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Nhân viên</a>
                <div class="dropdown-menu bg-transparent border-0">
                    <a asp-action="DanhsachNV" asp-controller="QLNhanvien" asp-area="Admin" class="dropdown-item"><i class="fa fa-tachometer-alt me-2"></i>Quản lí tài khoản</a>
                </div>
            </div>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Khách hàng</a>
                <div class="dropdown-menu bg-transparent border-0">
                    <a asp-action="DanhsachKH" asp-controller="QLKhachhang" asp-area="Admin" class="dropdown-item"><i class="fa fa-tachometer-alt me-2"></i>Quản lí tài khoản</a>
                    <a asp-action="DanhsachxeCanDuyet" asp-controller="DuyetXe" asp-area="Admin" class="dropdown-item"><i class="fa fa-tachometer-alt me-2"></i>Kiểm duyệt xe</a>
                    <a asp-action="Danhsachxacnhantiencoc" asp-controller="TienCoc" asp-area="Admin" class="dropdown-item"><i class="fa fa-tachometer-alt me-2"></i>Quản lí giao dịch</a>
                </div>
            </div>            
        </div>
    </nav>
</div>
<!-- Sidebar End -->