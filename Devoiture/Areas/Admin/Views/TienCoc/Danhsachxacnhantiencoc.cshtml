@model List<Devoiture.ViewModel.Xacnhantienmat_VM>

@{
    ViewData["Title"] = "Danh sách giao dich tiền mặt";
}
<div class="table-responsive">
    <table class="table table-bordered table-hover mx-1">
        <thead class="thead-dark">
            <tr>
                <th>Car Model</th>
                <th>Image</th>
                <th>Renter's Name</th>
                <th>Rental Period</th>
                <th>Rental Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MauXe</td>
                    <td><img src="~/images/Xe/@item.HinhXe" alt="Car Image" class="img-fluid" style="max-width: 100px;" /></td>
                    <td>@item.HoTenNguoiThue</td>
                    <td>@item.ThoiGianThue</td>
                    <td>@item.TrangThaiThue</td>
                    <td>
                        <a asp-action="ChitietycThanhtoanTienCoc" asp-route-mayc="@item.MaYc" asp-controller="TienCoc" asp-area="Admin" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>