@model Devoiture.ViewModel.ChitietHDCT

@{
    ViewData["Title"] = "Chi tiết hóa đơn thuê xe";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin hóa đơn</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã hóa đơn</dt>
                <dd class="col-sm-9">@Model.MaHdct</dd>

                <dt class="col-sm-3">Mã yêu cầu</dt>
                <dd class="col-sm-9">@Model.MaYc</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Biển số xe</dt>
                <dd class="col-sm-9">@Model.Biensx</dd>

                <dt class="col-sm-3">Ngày lập hóa đơn</dt>
                <dd class="col-sm-9">@Model.NglapHd.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.Hoten</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.Sdt</dd>

                <dt class="col-sm-3">Tổng tiền nhận được</dt>
                <dd class="col-sm-9">@String.Format("{0:N0}", @Model.Tongtiennhanduoc) đ</dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            <a href="@Url.Action("Index", "HoaDon")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>