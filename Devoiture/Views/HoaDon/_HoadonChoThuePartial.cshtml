@model List<Devoiture.ViewModel.HoaDonChoThue>

<div class="table-responsive">
    <table class="table table-bordered table-hover mx-1">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Mã Hóa Đơn</th>
                <th>Ngày Lập Hóa Đơn</th>
                <th>Tên Khách Hàng</th>
                <th>Tổng Tiền</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.email</td>
                    <td>@item.MaHd</td>
                    <td>@item.NgaylapHd.ToString("dd/MM/yyyy")</td>
                    <td>@item.TenKhachHang</td>
                    <td>@item.TongTien đ</td>
                    <td>
                        <a asp-action="ChitietHDCT" asp-controller="HoaDon" asp-route-mahd="@item.MaHd" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
