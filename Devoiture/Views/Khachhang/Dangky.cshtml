@model Devoiture.ViewModel.DangkyKH_VM
@{
    ViewData["Title"] = "Đăng ký vào hệ thống";
}

@* @await Html.PartialAsync("_PageHeader") *@
<!-- Đăng ký Bắt đầu -->
<div class="container-fluid py-5" style="background-color: #f8f9fa;">
    <div class="container pt-5 pb-3">
        <h1 class="display-4 text-uppercase text-center mb-5">Đăng ký vào hệ thống</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8 mb-2 mx-auto">
                <div class="contact-form bg-white mb-4 shadow p-4 rounded">
                    <form asp-action="Dangky" asp-controller="Khachhang" method="post">
                        <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <label asp-for="@Model.Email" class="font-weight-bold">Email của bạn<span style="color:red">(Chỉ được nhập 1 lần duy nhất)</span></label>
                            <input asp-for="@Model.Email" type="email" class="form-control p-4" placeholder="Email của bạn" required="required">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.HoTen" class="font-weight-bold">Họ và tên</label>
                            <input asp-for="@Model.HoTen" type="text" class="form-control p-4" placeholder="Họ và tên" required="required">
                            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.Username" class="font-weight-bold">Tên đăng nhập</label>
                                <input asp-for="@Model.Username" type="text" class="form-control p-4" placeholder="Tên đăng nhập" required="required">
                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.Matkhau" class="font-weight-bold">Mật khẩu</label>
                                <input asp-for="@Model.Matkhau" type="password" class="form-control p-4" placeholder="Mật khẩu" required="required">
                                <span asp-validation-for="@Model.Matkhau" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.Sdt" class="font-weight-bold">Số điện thoại</label>
                                <input asp-for="@Model.Sdt" type="text" class="form-control p-4" placeholder="Số điện thoại" required="required">
                                <span asp-validation-for="@Model.Sdt" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.Ngsinh" class="font-weight-bold">Ngày sinh</label>
                                <div class="date mb-3" id="date1" data-target-input="nearest">
                                    <input asp-for="@Model.Ngsinh" type="text" class="form-control p-4 datetimepicker-input" placeholder="Ngày sinh"
                                           data-target="#date1" data-toggle="datetimepicker" />
                                    <span asp-validation-for="@Model.Ngsinh" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="mr-3 font-weight-bold">Giới tính:</label>
                            <div class="form-check form-check-inline">
                                <input asp-for="@Model.Gioitinh" type="radio" class="form-check-input" value="true" id="namradio">
                                <label class="form-check-label" for="namradio">Nam</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="@Model.Gioitinh" type="radio" class="form-check-input" value="false" id="nuradio">
                                <label class="form-check-label" for="nuradio">Nữ</label>
                            </div>
                            <span asp-validation-for="@Model.Gioitinh" class="text-danger"></span>
                        </div>
                        <p class="text-center">Bạn đã có tài khoản? <a asp-action="Dangnhap" asp-controller="Khachhang">Đăng nhập</a></p>
                        <div class="text-center">
                            <button class="btn btn-primary py-3 px-5" type="submit">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Đăng ký Kết thúc -->
<!-- Scripts for datetime picker -->
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('#date1').datetimepicker({
                format: 'L',
                icons: {
                    time: 'far fa-clock',
                    date: 'far fa-calendar',
                    up: 'fas fa-arrow-up',
                    down: 'fas fa-arrow-down',
                    previous: 'fas fa-chevron-left',
                    next: 'fas fa-chevron-right',
                    today: 'far fa-calendar-check',
                    clear: 'far fa-trash-alt',
                    close: 'far fa-times-circle'
                }
            });
        });
    </script>
}