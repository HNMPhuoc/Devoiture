@model Devoiture.ViewModel.DangnhapKH_VM
@{
    ViewData["Title"] = "Đăng nhập vào hệ thống";
}
@* @await Html.PartialAsync("_PageHeader") *@
<!-- Đăng nhập Bắt đầu -->
<div class="container-fluid py-5" style="background-color: #f8f9fa;">
    <div class="container pt-5 pb-3">
        <h1 class="display-4 text-uppercase text-center mb-5">Đăng nhập vào hệ thống</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8 mb-2 mx-auto">
                <div class="contact-form bg-white mb-4 shadow p-4 rounded">
                    <form asp-action="Dangnhap" asp-controller="Khachhang" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
                        <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Email" class="font-weight-bold">Email của bạn</label>
                            <input asp-for="@Model.Email" type="email" class="form-control p-4" placeholder="Email của bạn" required="required">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Matkhau" class="font-weight-bold">Mật khẩu</label>
                            <input asp-for="@Model.Matkhau" type="password" class="form-control p-4" placeholder="Mật khẩu" required="required">
                            <span asp-validation-for="@Model.Matkhau" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary py-3 px-5" type="submit">Đăng nhập</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p class="mb-0">Bạn chưa có tài khoản? <a asp-action="Dangky" asp-controller="Khachhang">Đăng ký</a></p>
                        <p class="mb-0"><a asp-action="Quenmk" asp-controller="Khachhang">Quên mật khẩu?</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Đăng nhập Kết thúc -->