@model Devoiture.ViewModel.ProfileKH_VM

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

@await Html.PartialAsync("_PageHeader")

<!-- Profile KH Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="row">
            <div class="col-lg-7 mb-2">
                <div class="contact-form bg-light mb-4 p-4">
                    <form asp-action="ProfileKH" asp-controller="Khachhang" method="get">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Username</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.Username">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Họ và tên</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.HoTen">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Số điện thoại</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.Sdt">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Ngày sinh</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.Ngsinh">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Giới tính</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.Gioitinh" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Số CCCD</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.SoCCCD" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Số GPLX A4</label>
                            <div class="col-sm-9">
                                <input readonly type="text" class="form-control" value="@ViewBag.SoGPLX" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12 text-center">
                                <button asp-action="Editprofile" class="btn btn-primary px-5" type="submit">
                                    Chỉnh sửa thông tin cá nhân
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 mb-2">
                <div class="bg-secondary d-flex flex-column justify-content-center px-5 mb-4" style="height: auto;">
                    <div class="form-group">
                        <label class="col-form-label">Hình đại diện</label>
                        <div class="col-sm-9">
                            <input readonly type="text" class="form-control" value="@ViewBag.HinhDD" />
                            <img src="~/images/AnhDaiDien/@ViewBag.HinhDD1" alt="Ảnh đại diện" style="border-radius:5px; max-height:200px;max-width:200px;background-color:white;margin-top:15px" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Hình căn cước công dân</label>
                        <div class="col-sm-9">
                            <input readonly type="text" class="form-control" value="@ViewBag.HinhCCCD" />
                            <img src="~/images/AnhCCCD/@ViewBag.HinhCCCD1" alt="Căn cước công dân" style="border-radius:5px; max-height:200px;max-width:200px;background-color:white;margin-top:15px" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Hình giấy phép lái xe A4+</label>
                        <div class="col-sm-9">
                            <input readonly type="text" class="form-control" value="@ViewBag.HinhGPLX" />
                            <img src="~/images/AnhGPLX/@ViewBag.HinhGPLX1" alt="Giấy phép lái xe" style="border-radius:5px; max-height:200px;max-width:200px;background-color:white;margin-top:15px" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Profile KH End -->
