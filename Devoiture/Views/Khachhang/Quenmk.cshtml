@model Devoiture.ViewModel.Quenmatkhau_VM
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<!-- Quên mật khẩu Bắt đầu -->
<div class="container-fluid py-5" style="background-color: #f8f9fa;">
    <div class="container pt-5 pb-3">
        <h1 class="display-4 text-uppercase text-center mb-5">Quên mật khẩu</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8 mb-2 mx-auto">
                <div class="contact-form bg-white mb-4 shadow p-4 rounded">
                    <form asp-action="Quenmk" asp-controller="Khachhang" method="post">
                        <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Email" class="font-weight-bold">Email của bạn</label>
                            <input asp-for="@Model.Email" type="email" class="form-control p-4" placeholder="Email của bạn" required="required">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Matkhau" class="font-weight-bold">Mật khẩu mới</label>
                            <input asp-for="@Model.Matkhau" type="password" class="form-control p-4" placeholder="Mật khẩu mới" required="required">
                            <span asp-validation-for="@Model.Matkhau" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Matkhauxacnhan" class="font-weight-bold">Xác nhận mật khẩu mới</label>
                            <input asp-for="@Model.Matkhauxacnhan" type="password" class="form-control p-4" placeholder="Xác nhận mật khẩu mới" required="required">
                            <span asp-validation-for="@Model.Matkhauxacnhan" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary py-3 px-5" type="submit">Đặt lại mật khẩu</button>
                        </div>
                        <div class="text-center mt-3">
                            <p class="mb-0"><a asp-action="Dangnhap" asp-controller="Khachhang">Quay lại trang đăng nhập</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Quên mật khẩu Kết thúc -->