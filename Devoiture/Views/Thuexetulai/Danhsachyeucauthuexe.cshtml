@model List<Devoiture.ViewModel.Danhsachyc_VM>

@{
    ViewData["Title"] = "Danh sách yêu cầu thuê xe";
}

@await Html.PartialAsync("_PageHeader")

<div class="container my-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover mx-1">
            <thead class="thead-dark">
                <tr>
                    <th>Car Model</th>
                    <th>Image</th>
                    <th>Request Date</th>
                    <th>Renter</th>
                    <th>Rental Period</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenMauXe</td>
                        <td><img src="~/images/Xe/@item.HinhXe" alt="Car Image" class="img-fluid" style="max-width: 100px;" /></td>
                        <td>@item.Ngayyeucau</td>
                        <td>@item.NguoiThue</td>
                        <td>@item.ThoiGianThue</td>
                        <td>@item.Trangthaiyc</td>
                        <td>
                            <a asp-action="Chitietyc" asp-route-mayc="@item.MaYc" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>