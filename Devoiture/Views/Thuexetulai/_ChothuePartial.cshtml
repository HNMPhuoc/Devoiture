@model List<Devoiture.ViewModel.Chothuexe_VM>

<div class="table-responsive">
    <table class="table table-bordered table-hover mx-1">
        <thead class="thead-dark">
            <tr>
                <th>Car Model</th>
                <th>Image</th>
                <th>Renter's Name</th>
                <th>Rental Period</th>
                <th>Rental Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MauXe</td>
                    <td><img src="~/images/Xe/@item.HinhXe" alt="Car Image" class="img-fluid" style="max-width: 100px;" /></td>
                    <td>@item.HoTenNguoiThue</td>
                    <td>@item.ThoiGianThue</td>
                    <td>@item.TrangThaiThue</td>
                    @if (item.TrangThaiThue == "Đã nhận xe")
                    {
                        <td>
                            <div class="d-flex justify-content-between">
                                <a asp-action="ChitietycThanhtoanTienCoc" asp-route-mayc="@item.MaYc" class="btn btn-info btn-sm mr-1">View</a>
                                <form asp-action="Hoanthanhgiaodich" method="post" asp-route-mayc="@item.MaYc">
                                    <button type="submit" class="btn btn-success btn-sm">Complete</button>
                                </form>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>