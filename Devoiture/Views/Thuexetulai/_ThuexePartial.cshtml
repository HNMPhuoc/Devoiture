@model List<Devoiture.ViewModel.ThuexeThanhToanTienCoc_VM>

<div class="table-responsive">
    <table class="table table-bordered table-hover mx-1">
        <thead class="thead-dark">
            <tr>
                <th>Car Model</th>
                <th>Image</th>
                <th>Owner's Name</th>
                <th>Rental Period</th>
                <th>Rental Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MauXe</td>
                    <td><img src="~/images/Xe/@item.HinhXe" alt="Car Image" class="img-fluid" style="max-width: 100px;" /></td>
                    <td>@item.HoTenChuXe</td>
                    <td>@item.ThoiGianThue</td>
                    <td>@item.TrangThaiThue</td>
                    @if (item.TrangThaiThue == "Chưa thanh toán tiền cọc")
                    {
                        <td>
                            <a asp-action="ChitietycThanhtoanTienCoc" asp-route-mayc="@item.MaYc" class="btn btn-info btn-sm">View</a>
                        </td>
                    }
                    @if (item.TrangThaiThue == "Đã thuê xe thành công")
                    {
                        <td>
                            <a asp-action="Chitietycdathuexe" asp-route-mayc="@item.MaYc" class="btn btn-info btn-sm">View</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>