@model Devoiture.ViewModel.ThemxeVM

@{
    ViewData["Title"] = "Thêm xe";
}
@await Html.PartialAsync("_PageHeader")
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <h1 class="display-4 text-uppercase text-center mb-5">Đăng ký cho thuê xe</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8 mb-2 mx-auto">
                <div class="contact-form bg-light mb-4" style="padding: 30px;">
                    <form asp-action="ThemXe" asp-controller="XeKH" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Biển số xe<span style="color:red">(Lưu ý: Chỉ được nhập 1 lần duy nhát)</span></label>
                            <input asp-for="Biensoxe" class="form-control" />
                            <span asp-validation-for="Biensoxe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Hãng xe</label>
                            <select asp-for="MaHx" class="form-control" id="MaHx" name="MaHx" asp-items="Model.HangXeList"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mẫu xe</label>
                            <select asp-for="MaMx" class="form-control" id="MaMx" name="MaMx" asp-items="Model.MauXeList"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Loại xe</label>
                            <select asp-for="MaLoai" class="form-control" asp-items="@Model.LoaiXeList"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Giá thuê xe</label>
                            <input asp-for="Giathue" class="form-control" />
                            <span asp-validation-for="Giathue" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Năm sản xuất</label>
                            <input asp-for="NamSx" class="form-control" />
                            <span asp-validation-for="NamSx" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số ghế ngồi</label>
                            <input asp-for="Soghe" class="form-control" />
                            <span asp-validation-for="Soghe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mức tiêu thụ nhiên liệu</label>
                            <input asp-for="Muctieuthunhienlieu" class="form-control" />
                            <span asp-validation-for="Muctieuthunhienlieu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Hình ảnh xe</label>
                            <input type="file" name="Hinh" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Khu vực</label>
                            <select asp-for="Makv" class="form-control" asp-items="Model.KhuVucList"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Diachixe" class="control-label">Địa chỉ xe</label>
                            <input asp-for="Diachixe" class="form-control" />
                            <span asp-validation-for="Diachixe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Dieukhoanthuexe" class="control-label">Điều khoản thuê xe</label>
                            <input asp-for="Dieukhoanthuexe" class="form-control" />
                            <span asp-validation-for="Dieukhoanthuexe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MotaDacDiemChucNang" class="control-label">Đặc điểm chức năng của xe</label>
                            <input asp-for="MotaDacDiemChucNang" class="form-control" />
                            <span asp-validation-for="MotaDacDiemChucNang" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Loainhienlieu" class="control-label">Loại nhiên liệu</label>
                            <input asp-for="Loainhienlieu" class="form-control" />
                            <span asp-validation-for="Loainhienlieu" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">Bạn có đang bảo trì xe không?</label>
                            <div class="form-check form-check-inline">
                                <input asp-for="Trangthaibaotri" type="radio" class="form-check-input" value="true">
                                <label class="form-check-label" for="yesradio">Có</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Trangthaibaotri" type="radio" class="form-check-input" value="false">
                                <label class="form-check-label" for="noradio">Không</label>
                            </div>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">Bạn có muốn giao xe tận nơi cho người thuê không?</label>
                            <div class="form-check form-check-inline">
                                <input asp-for="Giaoxetannoi" type="radio" class="form-check-input" value="true">
                                <label class="form-check-label" for="yesradio">Có</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Giaoxetannoi" type="radio" class="form-check-input" value="false">
                                <label class="form-check-label" for="noradio">Không</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    var selectElement = document.getElementById('MaHx');
    selectElement.addEventListener('change', function () {
        var selectedBrandId = selectElement.value;
        if (selectedBrandId) {
            // Gửi yêu cầu AJAX để lấy danh sách mẫu xe dựa trên hãng xe được chọn
            $.ajax({
                url: '/XeKH/GetModelsByBrand', // URL của phương thức AJAX
                type: 'GET',
                data: { brandId: selectedBrandId }, // Dữ liệu gửi đi (ID của hãng xe)
                success: function (response) {
                    console.log(response); // Kiểm tra dữ liệu trả về từ phản hồi AJAX
                    var options = '<option value="">Chọn mẫu xe</option>';
                    response.forEach(function (item) {
                        options += '<option value="' + item.maMx + '">' + item.tenMx + '</option>';
                    });
                    $('#MaMx').html(options); // Cập nhật dropdownlist mẫu xe
                },
                error: function () {
                    alert('Đã xảy ra lỗi khi tải danh sách mẫu xe.');
                }
            });
        } else {
            // Nếu không chọn hãng xe, đặt lại dropdownlist mẫu xe trống
            $('#MaMx').html('<option value="">Chọn mẫu xe</option>');
        }
    });
</script>